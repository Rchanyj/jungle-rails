<% product = details.product %>
<% @total += details.total_price %>

<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= @order.email %>
  </td>
  <td>
    <%= details.item_price %>
  </td>
  <td>
    <%= details.quantity %>
  </td>
  <td>
    <%= details.total_price %>
  </td>
</tr>