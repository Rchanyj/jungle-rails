<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
    <h1>Review this product!</h1>

      <%= form_for @product, url: product_reviews_path(@product.id), method: "post" do |f| %>
        Review:
        <ul>
          <%= f.fields_for :review do |r_form| %>
          <li>
            <%= select_tag(:rating, options_for_select([[5], [4], [3], [2], [1]])) %>

            <%= r_form.label :description %>
            <%= r_form.text_area :description %>
          </li>
          <% end %>
        </ul>
      <%= f.submit "Submit review!" %>

      <% end %>
    </div>

    <% if !@reviews.nil? %>
      <div class="row">
        <div class="col-sm-8">
          <dl class="dl-horizontal">
          <% @reviews.each do |review| %>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
            <dt>Review</dt>
            <dd><%= review.user_id %> : <%= review.description %></dd>
          <% end %>
          </dl>
        </div>
      </div>
    <% end %>

  </article>

</section>
