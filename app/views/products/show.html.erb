<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <div class="row">
      <h1>Review this product!</h1>

        <%= form_for @review, url: product_reviews_path(@product.id), method: "post" do |f| %>
          Review:
          <ul>
            <li>
              <%= f.select(:rating, options_for_select([[5], [4], [3], [2], [1]])) %>

              <%= f.label :description %>
              <%= f.text_area :description %>
            </li>
          </ul>
        <%= f.submit "Submit review!" %>

        <% end %>
      </div>
    <% end %>

    <% if !@reviews.nil? %>
      <div class="row">
        <div class="col-sm-8">
          <dl class="dl-horizontal">
          <% @reviews.each do |review| %>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
            <dt>Review</dt>
            <% @username = User.find(review.user_id).firstname %>
            <dd><%= @username %> : <%= review.description %></dd>
            <% if current_user %>
              <% if review.user_id == current_user.id %>
                <%= link_to fa_icon('trash'), [review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            <% end %>
          <% end %>
          </dl>
        </div>
      </div>
    <% end %>

  </article>

</section>
